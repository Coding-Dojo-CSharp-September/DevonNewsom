@{
    ViewData["Title"] = "Home Page";
}
@using ChefsNDishes.Models 
@model ChefsNDishes.Models.Chef
<h1>@Model.FirstName @Model.LastName</h1>
<hr>
<h4><strong>Username:</strong>@Model.Username</h4>
<h4><strong>Date Registered:</strong>@Model.CreatedAt.ToString("D")</h4>
<ul>
    @foreach(Dish dish in Model.Masterpieces)
    {
        <li>@dish.Name</li>
    }
</ul>
<form method="post" asp-controller="Chef" asp-action="Edit">
    <div class="form-group">
        <span asp-validation-for="FirstName"></span>
        <label for="" asp-for="FirstName"></label>
        <input type="text" class="form-control" asp-for="FirstName">
    </div>
    <div class="form-group">
        <span asp-validation-for="LastName"></span>
        <label for="" asp-for="LastName"></label>
        <input type="text" class="form-control" asp-for="LastName">
    </div>
    <input type="submit" value="Edit Chef">
</form>